<h2>Welcome to Pizza!</h2>

<div classs="row">

	<% @products.each do |p| %>
	<div class="col-md-3">
		<div>
			<%= p.title %>
		</div>

		<div>
			<img src="<%= p.path_to_image %>" />
		</div>

		<div>
			<%= p.description %>
		</div>

		<div>
			Price: <%= p.price %>
		</div>
	</div>
	<% end %>
</div>

<br>
